{
  "id": null,
  "title": "Fusionpact Backend Observability",
  "uid": "fusionpact-backend",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "Request Rate (req/sec)",
      "id": 1,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (method, path)",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "reqps" }, { "format": "short" }]
    },
    {
      "type": "graph",
      "title": "Request Latency (seconds)",
      "id": 2,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, method, path))",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "s" }, { "format": "short" }]
    },
    {
      "type": "graph",
      "title": "HTTP 5xx Error Rate (%)",
      "id": 3,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[1m])) / sum(rate(http_requests_total[1m])) * 100",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "percent" }, { "format": "short" }]
    },
    {
      "type": "graph",
      "title": "In-Progress Requests",
      "id": 4,
      "targets": [
        {
          "expr": "sum(http_requests_in_progress) by (method, path)",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "req" }, { "format": "short" }]
    },
    {
      "type": "graph",
      "title": "Request Size (Bytes)",
      "id": 5,
      "targets": [
        {
          "expr": "sum(rate(http_request_size_bytes[1m])) by (method, path)",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "bytes" }, { "format": "short" }]
    },
    {
      "type": "graph",
      "title": "Response Size (Bytes)",
      "id": 6,
      "targets": [
        {
          "expr": "sum(rate(http_response_size_bytes[1m])) by (method, path)",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [{ "format": "bytes" }, { "format": "short" }]
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] },
  "time": { "from": "now-5m", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  }
}
